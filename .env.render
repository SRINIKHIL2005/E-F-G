# Render Deployment Environment Variables
# Backend Environment Variables (for backend service)
MONGODB_URI=mongodb+srv://YOUR_MONGODB_USER:YOUR_MONGODB_PASSWORD@YOUR_CLUSTER.mongodb.net/eduFeedback?retryWrites=true&w=majority
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_256_bits_for_render_deployment
REFRESH_TOKEN_SECRET=your_refresh_token_secret_different_from_jwt_for_render
JWT_EXPIRE_TIME=24h
REFRESH_TOKEN_EXPIRE_TIME=7d
SALT_ROUNDS=12
BCRYPT_ROUNDS=12
PORT=5000

# Frontend URLs for CORS (Render URLs)
FRONTEND_URL=https://YOUR_FRONTEND_SERVICE_NAME.onrender.com
ALLOWED_ORIGINS=https://YOUR_FRONTEND_SERVICE_NAME.onrender.com,http://localhost:3000,http://localhost:8080

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
SUSPICIOUS_ACTIVITY_THRESHOLD=10

# Firebase Configuration (if using Firebase)
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
FROM_EMAIL=noreply@yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif
UPLOAD_PATH=./uploads
SCAN_UPLOADS=true

# AI/Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Node Environment
NODE_ENV=production
